<Window x:Class="HelloClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloClient"
        mc:Ignorable="d"
        Title="GreeterClient" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="20" Height="Auto">
                <TextBlock Text="Name:"/>
                <TextBox Name="tbName" Width="120" Margin="12 0 0 0"/>
                <Button Name="tbHello" Content="Hello" Margin="12 0 0 0" Click="TbHello_OnClick"/>
                <Button Name="tbWorld" Content="Hello" Margin="12 0 0 0" Click="TbWorld_OnClick"/>
            </StackPanel>
            <ListView Name="lvResponse" MaxHeight="200"/>
        </StackPanel>
    </Grid>
</Window>
